{
  "configurations": [
    {
      "name": "Firmware",
      "compilerPath": "${env:IDF_TOOL_PATH}/riscv32-esp-elf/esp-15.1.0_20250607/riscv32-esp-elf/bin/riscv32-esp-elf-gcc",
      "compileCommands": "${workspaceFolder}/build/compile_commands.json",
      "includePath": [
        "${workspaceFolder}/**",
        // "${workspaceFolder}/managed_components/**",
        "${env:IDF_PATH}/components/**"
      ],
      "browse": {
        "path": ["${env:IDF_PATH}/components", "${workspaceFolder}"],
        "limitSymbolsToIncludedHeaders": true
      }
    }
  ],
  "env": {
    "IDF_PATH": "${workspaceFolder}/esp-idf",
    "IDF_TOOL_PATH": "~/.espressif/tools"
  },
  "version": 4
}
